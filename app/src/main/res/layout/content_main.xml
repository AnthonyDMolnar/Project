<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/lblAmount"
    android:layout_width="300dp"
    android:layout_height="50dp"
    android:layout_marginTop="75dp"
    android:text="Measurement"
    android:textSize="30dp"
    android:layout_alignParentTop="true"
    />
<EditText
    android:id="@+id/etAmount"
    android:layout_width="150dp"
    android:layout_height="50dp"
    android:layout_toRightOf="@id/lblAmount"
    android:layout_alignBottom="@id/lblAmount"
    android:textSize="30dp"
    android:inputType="numberDecimal"
    />
<TextView
    android:id="@+id/lblHint"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_below="@id/lblAmount"
    android:text="Hint: 1/3=.33 1/4=.25, 1/8=.125"
    android:textSize="25dp"
    />
<Button
    android:id="@+id/btnConvert"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:text="Convert"
    android:textSize="30dp"
    android:gravity="center"
    android:layout_below="@id/lblHint"
    android:onClick="convert"
    />
<TextView
    android:id="@+id/lblAnswer"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_below="@id/btnConvert"
    android:textSize="30dp"
    />

</RelativeLayout>